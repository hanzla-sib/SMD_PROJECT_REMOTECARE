<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitychat"
    android:orientation="vertical"
    android:weightSum="10.3"
    android:background="#D8DAE4"
    >

    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#3874B5"
        android:orientation="horizontal"
        android:layout_weight="0.7"
        android:layout_height="0dp"
        android:textStyle="bold"
        >

        <include
            layout="@layout/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginLeft="5dp"
            >
        </include>

        <TextView
            android:id="@+id/userMainChatActivityProfileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Steps History"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_weight="0.9"
            android:paddingLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#5B38AE4C"
        >

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="search"
            android:id="@+id/searchbar"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/insidechatrv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chat_bg2"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="6dp"
        android:layout_weight="0.8"
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@drawable/chat_bg2"
        >


        <EditText
            android:id="@+id/edit1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/roundedittext"
            android:hint="   Enter Message "
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="3.9"

            />

        <ImageButton
            android:layout_weight="0.1"
            android:id="@+id/send1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/send_button_background_design"
            android:elevation="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_send_24"
            android:layout_marginTop="4dp"
            />


    </LinearLayout>

</LinearLayout>