<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".messagemain"
    android:background="#3874B5"
    android:weightSum="10"
    >

    <LinearLayout
        android:id="@+id/mainAppBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        >


        <include
            layout="@layout/back_button"
            android:layout_width="60dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content">
        </include>


        <TextView
            android:id="@+id/appLogoTextView"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/mainAppBarSearchButton"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView

            android:id="@+id/logout"
            android:layout_width="30dp"
            android:backgroundTint="#3874B5"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_exit_to_app_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="4"
        android:background="@drawable/chat_bg2"

        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewbottom"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <include
            layout="@layout/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        </include>

    </RelativeLayout>

</LinearLayout>