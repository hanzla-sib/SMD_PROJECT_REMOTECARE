<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".messagemain"
    android:background="#3874B5"
    >

    <LinearLayout
        android:id="@+id/mainAppBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        >



        <TextView
            android:id="@+id/appLogoTextView"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/mainAppBarSearchButton"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView

            android:id="@+id/logout"
            android:layout_width="30dp"
            android:backgroundTint="#3874B5"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_exit_to_app_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2"
        android:weightSum="4"
        android:background="@drawable/chat_bg2"

        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewbottom"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>