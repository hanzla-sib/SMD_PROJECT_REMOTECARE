<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_signup"
    android:orientation="vertical"
    android:background="#D8DAE4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/rc_new_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginHorizontal="30dp"
                android:text="Enter Credentials"
                android:textColor="#636363"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="25dp"
                android:text="Sign In"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/ip_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:text="Change IP"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@+id/signin"
                />






        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:paddingLeft="20dp"
            android:textColorHint="#636363"
            android:textColor="@color/black"
            android:layout_marginHorizontal="25dp"
            android:paddingVertical="10dp"
            android:id="@+id/name"
            app:backgroundTint="@color/black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:textColorHint="#636363"
            android:textColor="@color/black"
            android:layout_marginHorizontal="25dp"
            android:paddingVertical="10dp"
            android:id="@+id/email"
            app:backgroundTint="@color/black"


            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:textColorHint="#636363"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:paddingVertical="10dp"
            android:id="@+id/password"
            app:backgroundTint="@color/black"
            android:layout_weight="3.8"


            />
        <CheckBox
            android:id="@+id/bt_show"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAlignment="viewStart"
            android:text="Show">
        </CheckBox>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="25dp"
            android:textColor="#636363"
            android:layout_marginHorizontal="30dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gendercircle"
                    android:id="@+id/male"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/male2"
                    android:background="#D8DAE4"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="50dp"
                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gendercircle"
                    android:id="@+id/female"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/female2"
                    android:background="#D8DAE4"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gendercircle"
                    android:id="@+id/other"
                    />

                <ImageView

                    android:id="@+id/image1screen2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/binary2"
                    android:background="#D8DAE4"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Type"
            android:textSize="25dp"
            android:textColor="#636363"
            android:layout_marginHorizontal="30dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="20dp"
            android:weightSum="2"
            android:background="#D8DAE4"
            android:paddingHorizontal="30dp"
            >


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_type"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Patient"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                >

                <ImageView
                    android:id="@+id/doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_type"
                    android:layout_centerInParent="true"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Doctor"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#D8DAE4"
            android:src="@drawable/sign_upbutton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="28sp"
            />

    </RelativeLayout>

</LinearLayout>