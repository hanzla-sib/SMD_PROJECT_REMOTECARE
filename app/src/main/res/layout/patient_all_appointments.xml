<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_All_appointments"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="10.7"
    >

    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_colors"
        android:orientation="horizontal"
        android:layout_weight="0.7"
        android:layout_height="0dp"
        android:textStyle="bold"
        >

        <include
            layout="@layout/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginLeft="5dp"
            >
        </include>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Appointments"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_weight="0.9"
            android:paddingRight="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:orientation="vertical"
            android:layout_marginRight="70dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:cardBackgroundColor="#FFAA8282"
                app:cardCornerRadius="20dp"
                android:id="@+id/patient_accepted_appointments"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/appointment2"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accepted Appointments"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:padding="10dp"
                        />



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_weight="3"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:cardBackgroundColor="#FFAA8282"
                app:cardCornerRadius="20dp"
                android:id="@+id/patient_all_appointments"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/appoint_doctor"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appoint a Doctor"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:padding="10dp"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:orientation="vertical"
            android:layout_marginRight="70dp"
            android:layout_weight="3"
            >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardBackgroundColor="#FFAA8282"
            app:cardCornerRadius="20dp"
            android:id="@+id/patient_pending_appointments"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pending"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Pending Appointments"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <include
            layout="@layout/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        </include>
    </RelativeLayout>

</LinearLayout>



