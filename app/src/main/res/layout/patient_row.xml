<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/patient_name"
            android:text="Patient Name : "
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patient_name2"
            android:text=""
            android:textSize="24sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/patient_email"
            android:text="Patient Email : "
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patient_email2"
            android:text=""
            android:textSize="24sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="9"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:layout_weight="4"


            >
            <ImageView
                android:id="@+id/btn_date"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/select_date_doc_side"
                />

            <ImageView
                android:id="@+id/btn_time"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/select_time_doc_side"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_weight="1"

            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_weight="4"

            >
            <ImageView
                android:id="@+id/accept_appointment"
                android:layout_marginHorizontal="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/accept_appointment_doc_side"
                />

            <ImageView
                android:id="@+id/reject_appointment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cross"

                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="70dp"
        >


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="2dp"
        android:background="#3874B5"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_date"
        android:visibility="gone"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_time"
        android:visibility="gone"
        />

</LinearLayout>